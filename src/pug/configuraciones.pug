mixin places(place)
  .section--container--places--box 
    h6=place

mixin cocinas-g-v(imagen,avatar,titulo,subtitulo)
  .section--container--cocinas--box 
    .section--container--cocinas--box--bg: img(src="src/images/"+imagen, alt="")
    .section--container--cocinas--box--contenido 
      .section--container--cocinas--box--contenido--avatar: img(src="src/images/"+avatar, alt="")
      h1=titulo
      h2=subtitulo
      .section--container--cocinas--box--contenido--atributos 
        .section--container--cocinas--box--contenido--atributos--box 
          img(src="src/images/gluten-free2.png", alt="gluten-free", class="gluten-img")
          p Gluten free
        .section--container--cocinas--box--contenido--atributos--box
          img(src="src/images/vegan2.png", alt="vegano", class="vegan-img")
          p Vegano

